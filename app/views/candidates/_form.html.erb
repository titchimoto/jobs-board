<% if candidate  = current_user.candidate_for(job) %>
<div class='btn btn-success btn-block'>
  <i class="ion-star"> </i>&nbsp; Successfully Applied!
</div>
<% else %>
  <h4>Apply for this position: </h4>
<small>Your bio & contact details will also be included, so remember to keep it updated in <%= link_to "your profile.", current_user %></small>
  <%= form_for [job, Candidate.new] do |f| %>
    <div class="form-group">
      <%= f.label :body, class: 'sr-only' %>
      <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Tell them why you'd be great for this position..." %>
    </div>
    <%= f.submit "Apply", class: 'ion-star btn btn-info btn-block' %>
  <% end %>
<% end %>
