<% if favorite  = current_user.favorite_for(job) %>
  <%= link_to [job, favorite], class: 'btn btn-danger btn-block', method: :delete do %>
    <i class="icon"> </i>&nbsp; Unfavorite
  <% end %>
<% else %>
  <%= link_to [job, Favorite.new], class: 'btn btn-info btn-block', method: :post do %>
    <i class="icon"> </i>&nbsp; Favorite
  <% end %>
<% end %>
