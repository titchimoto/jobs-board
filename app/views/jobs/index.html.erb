<h1>All Jobs</h1>

<div class="row">
  <div class="col-md-9">
    <!-- <ul class="list-group"> -->

      <% @jobs.each do |job| %>
      <div class="row job-listing">


      <div class="col-md-7">
      <!-- <li class="list-group-flush"> -->
        <p class="job-title"><strong><%= link_to job.title, job %></strong></p>
        <p><small>Natural Doctors of Portland, OR</small></p>
        <p><small><%= job.body.first(70) + "..." %></small></p>

      </div>

      <div class="col-md-3">
        <%= job.location %>
      </div>
      <div class="col-md-2">
        <%= job.created_at.strftime("%B %d %Y") %>
      </div>
    <!-- </li> -->

  </div>

<% end %>
<!-- </ul> -->
</div>

<div class="col-md-3">
  <%= link_to "Post A New Job", new_job_path, class: 'btn btn-info btn-block' %>
</div>



