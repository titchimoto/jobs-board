<h1><%= @job.title %></h1>
<p><small><%= @job.location %></small></p>
<div class="row">
  <div class="col-md-8">
    <p><%= @job.body %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_job_path(@job), class: 'btn btn-success' %>
    <%= link_to "Delete", @job, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this job listing?' } %>
  </div>
</div>
